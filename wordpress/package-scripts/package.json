{
  "name": "[PLUGIN_SLUG]",
  "version": "[VERSION]",
  "description": "[PROJECT_DESCRIPTION]",
  "author": "[AUTHOR_NAME] <[AUTHOR_EMAIL]>",
  "homepage": "[PROJECT_HOMEPAGE]",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "[PROJECT_SUBTYPE]"
  ],
  "scripts": {
    "start": "wp-scripts start",
    "build": "wp-scripts build",
    "lint:all": "npm run lint:js && npm run lint:css && npm run lint:php",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:php:fix",
    "lint:js": "wp-scripts lint-js src",
    "lint:js:fix": "wp-scripts lint-js src --fix",
    "lint:css": "wp-scripts lint-style src/**/*.{css,scss}",
    "lint:css:fix": "wp-scripts lint-style src/**/*.{css,scss} --fix",
    "lint:php": "composer lint",
    "lint:php:fix": "composer lint:fix",
    "lint:md:docs": "wp-scripts lint-md-docs",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "test": "wp-scripts test-unit-js",
    "test:e2e": "wp-scripts test-e2e",
    "test:unit": "wp-scripts test-unit-js",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "playground": "npx @wp-now/wp-now start --blueprint=_playground/blueprint-local.json",
    "playground:demo": "npx @wp-now/wp-now start --blueprint=_playground/blueprint.json",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@wordpress/scripts": "latest",
    "husky": "latest",
    "lint-staged": "latest"
  },
  "lint-staged": {
    "*.php": [
      "composer lint:file"
    ],
    "*.js": [
      "wp-scripts lint-js"
    ],
    "*.{css,scss}": [
      "wp-scripts lint-style"
    ]
  }
}