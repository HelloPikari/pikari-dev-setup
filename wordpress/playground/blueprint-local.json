{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/wp-admin/post-new.php",
    "login": true,
    "features": {
        "networking": true
    },
    "steps": [
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "[PROJECT_NAME] - Local Development"
            }
        },
        {
            "step": "activatePlugin",
            "pluginPath": "[PLUGIN_SLUG]/[MAIN_FILE]"
        },
        {
            "step": "installTheme",
            "themeZipFile": {
                "resource": "wordpress.org/themes",
                "slug": "twentytwentyfour"
            }
        }
    ]
}